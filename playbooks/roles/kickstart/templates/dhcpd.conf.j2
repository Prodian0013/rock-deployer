allow booting;
allow bootp;

subnet {{ dhcp_net }} netmask {{ dhcp_mask }} {
    range {{ dhcp_start }} {{ dhcp_end }};
    next-server {{ kick_srvr }};
    default-lease-time 150;
    max-lease-time 300;
    deny unknown-clients;
}

{% for host in groups['servers'] %}
host {{ hostvars[host].inventory_hostname_short }} { 
  hardware ethernet  {{ hostvars[host].mac | lower }};
{% if hostvars[host].pxe_type == 'bios' %} 
  filename "pxelinux.0";
{% endif %}
{% if hostvars[host].pxe_type == 'uefi' %} 
  filename "uefi/BOOTX64.EFI";
{% endif %}
}
{% endfor %}